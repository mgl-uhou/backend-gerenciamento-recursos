				"responses": {
					"400": {
						"description": "Error creating department."
					},
					"401": {
						"description": "Unauthorized."
					},
					"201": {
						"description": "Ok.",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Default"
								}
							}
						}
					}
				}
			}
		},

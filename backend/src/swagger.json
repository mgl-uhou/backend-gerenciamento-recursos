					"firstName": {
						"type": "string"
					},
					"lastName": {
						"type": "string"
					},
					"email": {
						"type": "string"
					},
					"birthDate": {
						"type": "string",
						"format": "date"
					},
					"vacationStart": {
						"type": "string",
						"format": "date"
					},
					"vacationEnd": {
						"type": "string",
